code

# Assign a value to the variable
alien_color = 'red'

# Check the color of the alien and print a message based on the color
if alien_color == 'green':
    print("You just earned 5 points for shooting the green alien!")
elif alien_color == 'yellow':
    print("You just earned 10 points for shooting the yellow alien!")
else:
    print("You just earned 15 points for shooting the red alien!")


code

# Version 1: alien_color is green
alien_color = 'green'

if alien_color == 'green':
    print("You just earned 5 points for shooting the green alien!")
elif alien_color == 'yellow':
    print("You just earned 10 points for shooting the yellow alien!")
else:
    print("You just earned 15 points for shooting the red alien!")

# Version 2: alien_color is yellow
alien_color = 'yellow'

if alien_color == 'green':
    print("You just earned 5 points for shooting the green alien!")
elif alien_color == 'yellow':
    print("You just earned 10 points for shooting the yellow alien!")
else:
    print("You just earned 15 points for shooting the red alien!")

# Version 3: alien_color is red
alien_color = 'red'

if alien_color == 'green':
    print("You just earned 5 points for shooting the green alien!")
elif alien_color == 'yellow':
    print("You just earned 10 points for shooting the yellow alien!")
else:
    print("You just earned 15 points for shooting the red alien!")
