code

# Tests for equality and inequality with strings
name = 'Alice'
print("Is the name 'Alice'? I predict True.")
print(name == 'Alice')

print("Is the name 'Bob'? I predict False.")
print(name == 'Bob')

# Tests using the lower() function
color = 'Red'
print("Is the color 'red'? I predict True.")
print(color.lower() == 'red')

print("Is the color 'blue'? I predict False.")
print(color.lower() == 'blue')

# Numerical tests involving equality and inequality, greater than and less than,
# greater than or equal to, and less than or equal to
number = 10
print("Is the number equal to 10? I predict True.")
print(number == 10)

print("Is the number not equal to 10? I predict False.")
print(number != 10)

print("Is the number greater than 5? I predict True.")
print(number > 5)

print("Is the number less than 5? I predict False.")
print(number < 5)

print("Is the number greater than or equal to 10? I predict True.")
print(number >= 10)

print("Is the number less than or equal to 5? I predict False.")
print(number <= 5)

# Tests using the and keyword and the or keyword
age = 25
print("Is the age between 20 and 30? I predict True.")
print(age >= 20 and age <= 30)

print("Is the age less than 20 or greater than 30? I predict False.")
print(age < 20 or age > 30)

# Test whether an item is in a list
fruits = ['apple', 'banana', 'orange', 'kiwi', 'strawberry']
print("Is 'banana' in the list? I predict True.")
print('banana' in fruits)

print("Is 'grape' in the list? I predict False.")
print('grape' in fruits)

# Test whether an item is not in a list
print("Is 'grape' not in the list? I predict True.")
print('grape' not in fruits)

print("Is 'banana' not in the list? I predict False.")
print('banana' not in fruits)


